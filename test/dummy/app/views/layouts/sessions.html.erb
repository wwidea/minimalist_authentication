<!DOCTYPE html>
<html>
  <head>
    <title>Dummy - Sessions</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
  </head>

  <body>
    <h3>Session:</h3>
    <%= render "layouts/hash", hash: session %>

    <h3>Flash:</h3>
    <%= render "layouts/hash", hash: flash %>

    <h3>Login Shortcuts</h3>
    <ul>
      <% User.active.order(:email).each do |user| %>
        <li><%= button_to(user.email, session_path(user: { email: user.email, password: MinimalistAuthentication::TestHelper::PASSWORD } )) %></li>
      <% end %>
    </ul>

    <h3>Mailer Previews</h3>
    <p>
      <%= link_to("Action Mailer Previews", "/rails/mailers") %>
    </p>

    <h3>Password Resets</h3>
    <ul>
      <% User.active.with_verified_email.order(:email).each do |user| %>
        <li><%= link_to(user.email, edit_user_password_path(user, token: user.generate_token_for(:password_reset))) %></li>
      <% end %>
    </ul>

    <%= yield %>

    <p>
      <%= link_to "Login", new_session_path %>
      <%= link_to "Logout", session_path, method: :delete %>
    </p>
  </body>
</html>
